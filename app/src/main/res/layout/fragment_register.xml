<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".Register">

    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/usr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_background"
            android:padding="14dp">

            <ImageView
                android:id="@+id/iconNamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_person"/>

            <EditText
                android:id="@+id/etNamaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconNamaUser"
                android:layout_marginStart="12dp"
                android:hint="Username"
                android:background="@android:color/transparent" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usr"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_background"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iconNamaEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_email"/>

        <EditText
            android:id="@+id/etNamaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconNamaEmail"
            android:layout_marginStart="12dp"
            android:hint="Email"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_background"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iconNamaPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_phone_24"/>

        <EditText
            android:id="@+id/etNamaPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconNamaPhone"
            android:layout_marginStart="12dp"
            android:hint="Phone"
            android:inputType="number"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_background"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iconNamaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_lock"/>

        <EditText
            android:id="@+id/etNamaPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconNamaPassword"
            android:layout_marginStart="12dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"/>

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:textSize="13sp"
        android:layout_below="@id/password"
        android:text="@string/text_with_color"/>

    <Button
        android:id="@+id/btn_to_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/terms"
        android:text="Register"
        android:backgroundTint="@color/blue"/>

    <TextView
        android:id="@+id/akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_to_second_activity"
        android:text="@string/loginbro"
        android:layout_marginTop="10dp"
        android:gravity="center"/>


</RelativeLayout>